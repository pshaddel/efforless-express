{
  "roots": ["<rootDir>/tests"],
  "transform": {
    "^.+\\.tsx?$": "@swc/jest"
  },
  "modulePathIgnorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    ".github",
    ".vscode"
  ],
  "testMatch": ["**/tests/**/*.test.ts"],
  "moduleFileExtensions": ["ts", "json", "js", "node"]
}
